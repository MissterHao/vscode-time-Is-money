{
  "name": "time-is-money",
  "displayName": "Time is Money",
  "description": "Shows how much money you've earned since starting work today (顯示自從開始上班以來，到目前為止賺了多少錢)",
  "version": "0.0.1",
  "publisher": "MooKing",
  "author": {
    "name": "MooKing"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MissterHao/vscode-time-is-money"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Time is Money",
      "properties": {
        "time-is-money.monthlySalary": {
          "type": "number",
          "default": 60000,
          "description": "Your monthly salary"
        },
        "time-is-money.startWorkTime": {
          "type": "string",
          "default": "09:00:00",
          "description": "Your daily work start time"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
